---
import StyledIcon from "./StyledIcon.astro";
import ReplitIcon from "./icons/ReplitIcon.astro";

import { socials } from "../util/util";
---

<div class="flex gap-2">
  {
    socials.map((v) => (
      <a href={v.link} rel="noreferrer" target="_blank">
        <StyledIcon name={v.icon} />
      </a>
    ))
  }
  <a
    href="https://replit.com/@ErikoXDev"
    class="p-2 bg-light/5 rounded-full hover:bg-light/10 transition-colors select-none"
    rel="noreferrer"
    target="_blank"
  >
    <ReplitIcon />
  </a>
</div>
