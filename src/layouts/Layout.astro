---
import Navbar from "../components/Navbar.astro";

import { SEO } from "astro-seo";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO
      title={title}
      description="Hi, I'm ErikoXDev! Here I showcase all my projects that I have designed and programmed over the years!"
      openGraph={{
        basic: {
          title: "ErikoXDev's Portfolio",
          type: "website",
          image: "https://eriko.dev/banner.png",
          url: "https://eriko.dev",
        },
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", type: "image/png", href: "/favicon.png" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:card",
            content: "summary_large_image",
          },
          {
            name: "twitter:image",
            content: "https://eriko.dev/banner.png",
          },
          { name: "twitter:title", content: "ErikoXDev" },
        ],
      }}
    />
    <meta charset="UTF-8" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="https://api.fontshare.com/v2/css?f[]=satoshi@1,900,700,500,300,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="h-screen font-primary bg-dark text-light font-semibold px-4"
    id="Home"
  >
    <Navbar />
    <slot />
  </body>
</html>
